<section id="content">
	<div class="content-wrap">


		<!-- Summary Area
		============================================= -->

		<div class="container clearfix">

			<div class="row">
				<div class="col-xl-3 col-sm-6 mb-3">
					<div class="card text-white bg-primary o-hidden h-100">
						<div class="tile-heading">Total Products</div>
						<div class="card-body">
						
							{{#if product_count}}
