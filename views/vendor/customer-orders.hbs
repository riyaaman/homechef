<section id="content">
    <div class="content-wrap p-0">
        <div class="container clearfix p-1">
            <div class="card mx-auto rounded-0 border  shadow ">
                <div class="card-header  ">
                    <h3 class="m-0 font-weight-bold text-theme color ">Customer Orders </h3>
                </div>
                <div class="card-body table-responsive">
                    <table class="table" id="order_table">
                        <thead>
                            <tr>
                                <th scope="col">Order Id</th>
                                <th scope="col">Date</th>
                                <th scope="col">Pincode</th>
                                <th scope="col">Payment</th>
                                <th scope="col">Gross </th>
                                <th scope="col">Total</th>
                                <th scope="col">Status</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each orders}}
                            <tr>
                                <td>{{this._id}} </td>
                                <td><span
                                        class="datatable-date">{{this.created_date_string}}</span>{{this.created_date}}
                                </td>                              
                                <td>{{this.deliveryDetails.billing_pincode}} </td>
                                <td>{{this.paymentMethod}}</td>
                                <td>{{this.gross_amount}}</td>
                                <td>{{this.total}}</td>
                                <td>{{this.order_status}}</td>
                                <td>
                                    <a class="btn bg-color"
                                        href="/vendor/view_order_products_byvendor/{{this._id}}">View
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <hr>
        </div>
    </div>
</section>


