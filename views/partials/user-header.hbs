<!-- Header
============================================= -->

<header id="header" class="transparent-header " data-sticky-shrink="false">
	<div id="header-wrap">
		<div class="container">
			<div class="header-row justify-content-lg-between">

				<!-- Logo
				============================================= -->
				<div id="logo" class="col-auto mr-lg-0 order-lg-2">

					<a href="/" class="standard-logo" data-dark-logo="/images/logo.png"><img src="/images/logo.png"
							alt=" Snacky"></a>
					<a href="/" class="retina-logo"><img src="/images/logo.png" alt=" Snacky"></a>
				</div><!-- #logo end -->
				<div class="header-misc">




					<!-- Top Cart
					============================================= -->
					<div id="top-cart" class="header-misc-icon d-none d-sm-block justify-content-end">
						<a href="/cart">
							<i class="icon-cart mr-2" style="font-size: 40px;"><span
									style="font-size:20px;">Cart</span></i>

							{{#if cart_count}}
							<span class="top-cart-number" id="cart-count">{{cart_count}}</span>

							{{else}}
							<span class="top-cart-number" id="cart-count">0</span>
							{{/if}}
						</a>
					</div><!-- #top-cart end -->
				</div>

				<div id="primary-menu-trigger">
					<svg class="svg-trigger" viewBox="0 0 100 100">
						<path
							d="m 30,33 h 40 c 3.722839,0 7.5,3.126468 7.5,8.578427 0,5.451959 -2.727029,8.421573 -7.5,8.421573 h -20">
						</path>
						<path d="m 30,50 h 40"></path>
						<path
							d="m 70,67 h -40 c 0,0 -7.5,-0.802118 -7.5,-8.365747 0,-7.563629 7.5,-8.634253 7.5,-8.634253 h 20">
						</path>
					</svg>
				</div>

				<!-- Primary Navigation
						============================================= -->
				<nav class="primary-menu col-lg-4 order-lg-1">

					<ul class="menu-container">
						<li class="menu-item"><a class="menu-link" href="/">
								<div>Home</div>
							</a></li>
						<li class="menu-item"><a class="menu-link" href="/about">
								<div>About</div>
							</a></li>
						<li class="menu-item"><a class="menu-link" href="/get_bakers">
								<div>Our Bakers</div>
							</a></li>

					</ul>

				</nav>

				<nav class="primary-menu col-lg-4 order-lg-3 style-2 with-arrows">
					{{!-- <nav class="primary-menu col-lg-4 order-lg-3" class="style-2 with-arrows"> --}}

						<ul class="menu-container justify-content-lg-end">
							{{!-- <ul class="menu-container "> --}}
								<li class="menu-item"><a class="menu-link" href="/gallery">
										<div>Gallery</div>
									</a></li>
								<li class="menu-item"><a class="menu-link" href="/contact">
										<div>Contact</div>
									</a></li>

								{{#if user_details}}
								<li class="top-links menu-item pt-xs-2">
									<ul class="top-links-container">
										<li class="top-links-item"><a>Hi, {{user_details.first_name}}<i
													class="icon-angle-down"></i></a>
											<ul class="top-links-sub-menu d-block">
												<li class="top-links-item"><a href="/profile">Account</a></li>
												<li class="top-links-item"><a href="/orders">Order History</a></li>	
												<li class="top-links-item"><a href="/user_logout">Logout</a></li>

											</ul>
										</li>
									</ul>
								</li>


								{{else}}
								<li class="menu-item">
									<a href="/user_login">
										<div>Login</div>
									</a>
								</li>
								{{/if}}



					</nav><!-- #primary-menu end -->

			</div>
		</div>
	</div>
	<div class="header-wrap-clone"></div>
</header><!-- #header end -->

