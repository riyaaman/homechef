<!-- Content
============================================= -->
<section id="content">
	<div class="content-wrap">

		<!-- Summary Area
		============================================= -->
		<div class="container clearfix">
			<div class="row">
				<div class="col-xl-3 col-sm-6 mb-3">
					<div class="card text-white bg-primary o-hidden h-100">
						<div class="tile-heading">Total Vendors</div>
						<div class="card-body">
							<div class="mr-5">{{count.vendor}} Vendors</div>
						</div>
						<a class="card-footer text-white clearfix small z-1" href="vendor_view">
							<span class="float-left">View Details</span>
							<span class="float-right">
								<i class="icon-angle-right"></i>
							</span>
						</a>
					</div>
				</div>
				<div class="col-xl-3 col-sm-6 mb-3">
					<div class="card text-white bg-warning o-hidden h-100">
						<div class="tile-heading">Total Products</div>
						<div class="card-body">
							<div class="mr-5">{{count.product}} Products </div>
						</div>
						<a class="card-footer text-white clearfix small z-1" href="#">
							<span class="float-left">View Details</span>
							<span class="float-right">
								<i class="icon-angle-right"></i>
							</span>
						</a>
					</div>
				</div>
				<div class="col-xl-3 col-sm-6 mb-3">
					<div class="card text-white bg-success o-hidden h-100">
						<div class="tile-heading">Total Orders</div>
						<div class="card-body">
							<div class="mr-5">{{count.order}} Orders</div>
						</div>
						<a class="card-footer text-white clearfix small z-1" href="get_all_orders">
							<span class="float-left">View Details</span>
							<span class="float-right">
								<i class="icon-angle-right"></i>
							</span>
						</a>
					</div>
				</div>
				<div class="col-xl-3 col-sm-6 mb-3">
					<div class="card text-white bg-danger o-hidden h-100">
						<div class="tile-heading">Total Customers</div>
						<div class="card-body">
							{{#if count.customers}}
							<div class="mr-5">{{count.customers}} Customers</div>
							{{else}}
							<div class="mr-5">0 Customers!</div>
							{{/if}}
						</div>
						<a class="card-footer text-white clearfix small z-1" href="get_all_sales_report">
							<span class="float-left">View Details</span>
							<span class="float-right">
								<i class="icon-angle-right"></i>
							</span>
						</a>
					</div>
				</div>
			</div>
		</div>

		<!-- Charts Area
		============================================= -->
		<div class="container section">
			<div class="row clearfix">
				<div class="col-lg-6">
					<div class="card mb-3">
						<div class="card-header">
							<i class="fas fa-chart-pie"></i>
							Sales Report One Month (Vendor)
						</div>
						<div class="card-body">
							<canvas id="chart_month" width="100%" height="100"></canvas>
						</div>
						<div class="card-footer small text-muted">Last Updated on {{this.date}}</div>
					</div>
				</div>
				<div class="col-lg-6 ">
					<div class="card mb-3">
						<div class="card-header">
							<i class="fas fa-chart-pie"></i>
							Today Sales (Product)
						</div>
						<div class="card-body">
							<canvas id="chart-1" width="100%" height="100"></canvas>
						</div>
						<div class="card-footer small text-muted">Last Updated on {{this.date}}</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- #content end -->




{{!-- // Sale Report Chart In today --}}
<script>
	$(document).ready(function () {
		$.ajax({
			url: "/admin/sales_report_chart",
			method: "GET",
			success: function (data) {
				var data = data
				var product = [];
				var count = [];
				for (var i in data) {
					product.push(data[i].product_name);
					count.push(data[i].totalAmount);
				}
				function getRandomColor() {
					var letters = '0123456789ABCDEF';
					var color = '#';
					for (var i = 0; i < 6; i++) {
						color += letters[Math.floor(Math.random() * 16)];
					}
					return color;
				}
				var config = {
					type: 'line',
					data: {
						datasets: [{
							data: count,
							borderColor: window.chartColors.red,
							label: 'Total Amount'
						}],
						labels: product
					},
					options: {
						responsive: true,
						legend: {
							position: 'top',
						},
						title: {
							display: true,
							text: 'Sales Chart'
						},
						animation: {
							animateScale: true,
							animateRotate: true
						}
					}
				};
				var ctx = document.getElementById("chart-1").getContext("2d");
				window.myDoughnut = new Chart(ctx, config);
			},
			error: function (data) {
				console.log(data);
			}
		});
	});
</script>


